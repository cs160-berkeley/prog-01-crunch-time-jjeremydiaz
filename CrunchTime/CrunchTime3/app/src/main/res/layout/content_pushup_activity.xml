<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/pushup_activity"
    tools:context="com.example.jeremy.crunchtime.PushupActivity"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true">

    <ImageView
        android:layout_width="513dp"
        android:layout_height="513dp"
        android:id="@+id/imageView"
        android:scaleType="fitXY"
        android:src="@drawable/pushups_activity_600_2"
        android:layout_gravity="center_horizontal|top"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate!"
        android:id="@+id/calculate_button"
        android:layout_marginBottom="141dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pushup_results"
        android:textCursorDrawable="@null"
        android:textColor="#ffffff"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/calculate_button"
        android:layout_toEndOf="@+id/calculate_button"
        android:layout_marginStart="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:id="@+id/textView4"
        android:textColor="#ffffff"
        android:layout_marginStart="17dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentStart="true" />
</RelativeLayout>
